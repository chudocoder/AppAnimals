@{
    <h2>Details for animal</h2>
    <br>
    <br>
    <div id="details"></div>
    <script>
        $(document).ready(function () {
            fetch("/api/Data/" + @Model).
                then(function (response) {
                    return response.json()
                }).
                    then(data => {

                        var det;
                        det = "";
                            var aniData = data[0];
                            keysData = Object.keys(aniData);
                        for (let key in keysData) {
                            det = det  +
                                "<li>" +
                                "<b>"  + keysData[key] + "</b>" +
                                " : "  + aniData[keysData[key]] +
                                "</li>";
                        }
                            console.log(det);

                        $("#details").append(det);
                        });
                });

    </script>
    <br>
    @Html.ActionLink("Edit", "EditAnimal", "Home", new { id = @Model });
    <nobr> | </nobr>
    @Html.ActionLink("Back", "Animals", "Home");
}
